                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.wujingchao.category.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".supportLibrary.design.MaterialDesignDetailActivity"
            android:label="SupportLibrary/MaterialDesign2"
            android:theme="@style/AppTheme.DayNight" />

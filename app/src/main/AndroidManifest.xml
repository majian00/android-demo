        <activity
            android:name=".os.MaxFileDescriptorActivity"
            android:label="Os/MaxFileDescriptor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.wujingchao.category.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".os.PipeDemo"
            android:label="Os/PipeDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.wujingchao.category.DEMO" />
            </intent-filter>
        </activity>

        <service
            android:name=".RemoteService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote" />


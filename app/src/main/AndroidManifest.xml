                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.wujingchao.category.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".supportLibrary.percentlayout.PercentLayoutActivity"
            android:label="SupportLibrary/PercentLayout">

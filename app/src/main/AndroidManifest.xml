        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".supportLibrary.recyclerview.RecyclerViewActivity"
            android:label="SupportLibrary/RecyclerView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.wujingchao.category.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tool.remotedebug.OpenRemoteDebugActivity"
            android:label="Tool/OpenRemoteDebug">
